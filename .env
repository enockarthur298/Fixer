# Fixer AI Configuration

# API Keys
# IMPORTANT: Replace with your actual Gemini API key from https://ai.google.dev/
GEMINI_API_KEY=

# Basic Tech API Configuration for user context storage
BASIC_TECH_API_KEY=
BASIC_TECH_PROJECT_ID=

# User ID for context storage (optional, can be overridden per user)
FIXER_USER_ID=did:tmp:

# Twilio SMS Configuration (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Voice Configuration
VOICE_RATE=150
VOICE_VOLUME=1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/fixer_ai.log

# Temporary Directories
TEMP_AUDIO_DIR=temp/audio
TEMP_IMAGE_DIR=temp/images
TEMP_SCRIPT_DIR=temp/scripts
